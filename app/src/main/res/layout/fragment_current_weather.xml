<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color_0a0d1e">

        <ImageView

            android:layout_marginTop="@dimen/_65sdp"
            android:id="@+id/imageView"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_210sdp"
            android:src="@drawable/ic_app_dispaly_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <LinearLayout
            android:id="@+id/li_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <TextView
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manropebold"
                android:text="Current Weather"
                android:textColor="@color/col_textcolor_e1e2e4"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

            </TextView>

            <TextView
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_temperatureTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manropebold"
                android:text=""
                android:textColor="@color/col_textcolor_e1e2e4"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

            </TextView>

            <TextView
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_feelsLikeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manropebold"
                android:text=""
                android:textColor="@color/col_textcolor_e1e2e4"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

            </TextView>


            <TextView
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_humidityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manropebold"
                android:text=""
                android:textColor="@color/col_textcolor_e1e2e4"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

            </TextView>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manroperegular"
                android:paddingHorizontal="@dimen/_30sdp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/col_textcolor_e1e2e4_80"
                android:textSize="@dimen/_12ssp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_welcome">

            </TextView>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
