<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".onboarding.fragments.WelcomeFragment">

    <com.google.android.gms.maps.MapView

        android:id="@+id/map_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

    </com.google.android.gms.maps.MapView>
    <TextView

        android:layout_marginVertical="@dimen/_9sdp"
        android:id="@+id/tv_address_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/_15ssp"
        android:textAlignment="center">

    </TextView>
    <LinearLayout
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_gravity="bottom"
        android:id="@+id/li_confirm_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:orientation="horizontal"
        android:textSize="@dimen/_16ssp">



        <androidx.cardview.widget.CardView
            android:id="@+id/btn_confirm_location"
            android:elevation="@dimen/_6sdp"
            app:cardElevation="@dimen/_6sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/background_color_0a0d1e"
            app:cardCornerRadius="@dimen/_8sdp">


            <TextView
                android:layout_marginVertical="@dimen/_9sdp"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Choose"
                android:textSize="@dimen/_15ssp"
                android:textAlignment="center">

            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:padding="@dimen/_10sdp"
        android:id="@+id/iv_mylocimage"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView

            android:src="@drawable/ic_red_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
    </FrameLayout>

</FrameLayout>

